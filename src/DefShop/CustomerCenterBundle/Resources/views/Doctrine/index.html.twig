{% extends "DefShopCustomerCenterBundle::layout.html.twig" %}

{%  block content %}
    <h1>Hello DefShop!</h1>

    <ul>
    {% for address in addresses %}
        <li>
            <strong>{{ address.name }}</strong>
            <a class="btn btn-xs btn-danger" href="{{ path('defshop.customer_center.doctrine_demo.remove', {addressId: address.id }) }}">
                x
            </a><br />
            {{ address.street }}<br />
            {{ address.zip }} {{ address.city }}<br />
        </li>
    {% endfor %}
    </ul>

    <form action="{{ path('defshop.customer_center.doctrine_demo') }}" method="POST">
        <div class="form-group">
            <label>Name</label>
            <input required type="text" class="form-control" name="name" placeholder="Name">
        </div>
        <div class="form-group">
            <label>Strasse</label>
            <input type="text" class="form-control" name="street" placeholder="Strasse">
        </div>
        <div class="form-group">
            <label>PLZ</label>
            <input type="number" class="form-control" name="zip" placeholder="12345">
        </div>
        <div class="form-group">
            <label>City</label>
            <input type="text" class="form-control" name="city" placeholder="Stadt">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>

{%  endblock %}