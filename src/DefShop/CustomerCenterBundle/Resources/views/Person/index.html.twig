{% extends "DefShopCustomerCenterBundle::layout.html.twig" %}

{%  block content %}
    <h1>{% trans %}Welcome{% endtrans %}</h1>

    <ul>
    {% for person in persons %}
        <li>
            <a href="{{ path('CustomerCenter.Address.index', {person: person.id}) }}">{{ person.name }}</a>
        </li>
    {% endfor %}
    </ul>

    <form action="{{ path('CustomerCenter.Person.index') }}" method="POST">
        <div class="form-group">
            <label>Name</label>
            <input required type="text" class="form-control" name="name" placeholder="Name">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>

{%  endblock %}