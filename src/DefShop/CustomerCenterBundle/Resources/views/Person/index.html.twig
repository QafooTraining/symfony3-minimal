{% extends "DefShopCustomerCenterBundle::layout.html.twig" %}

{%  block content %}
    <h1>Welcome</h1>

    <ul>
    {% for person in persons %}
        <li>
            <a href="{{ path('defshop.customer_center.address', {personId: person.id}) }}">{{ person.name }}</a>
        </li>
    {% endfor %}
    </ul>

    <form action="{{ path('defshop.customer_center.person') }}" method="POST">
        <div class="form-group">
            <label>Name</label>
            <input required type="text" class="form-control" name="name" placeholder="Name">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>

{%  endblock %}