<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="CustomerCenter.Default.index" path="/hello/{name}">
        <default key="_controller">DefShopCustomerCenterBundle:Default:index</default>
    </route>

    <route id="CustomerCenter.Person.index" path="/">
        <default key="_controller">DefShopCustomerCenterBundle:Person:index</default>
    </route>

    <route id="CustomerCenter.Address.index" path="/person/{person}">
        <default key="_controller">DefShopCustomerCenterBundle:Address:index</default>
    </route>

    <route id="CustomerCenter.Address.remove" path="/person/{person}/{address}">
        <default key="_controller">DefShopCustomerCenterBundle:Address:remove</default>
    </route>
</routes>
