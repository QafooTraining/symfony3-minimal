<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="defshop.customer_center.service_demo" path="/hello/{name}">
        <default key="_controller">DefShopCustomerCenterBundle:Default:index</default>
    </route>

    <route id="defshop.customer_center.doctrine_demo" path="/">
        <default key="_controller">DefShopCustomerCenterBundle:Doctrine:index</default>
    </route>

    <route id="defshop.customer_center.doctrine_demo.remove" path="/remove/{addressId}">
        <default key="_controller">DefShopCustomerCenterBundle:Doctrine:remove</default>
    </route>
</routes>
