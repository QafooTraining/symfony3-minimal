<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="defshop.customer_center.service_demo" path="/hello/{name}">
        <default key="_controller">DefShopCustomerCenterBundle:Default:index</default>
    </route>

    <route id="defshop.customer_center.person" path="/">
        <default key="_controller">DefShopCustomerCenterBundle:Person:index</default>
    </route>

    <route id="defshop.customer_center.address" path="/person/{personId}">
        <default key="_controller">DefShopCustomerCenterBundle:Address:index</default>
    </route>

    <route id="defshop.customer_center.address.remove" path="/person/{personId}/{addressId}">
        <default key="_controller">DefShopCustomerCenterBundle:Address:remove</default>
    </route>
</routes>
